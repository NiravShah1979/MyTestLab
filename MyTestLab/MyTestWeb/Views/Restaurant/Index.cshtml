@model List<MyTestWeb.Models.Item>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table>
    <tr><th>Code</th>
    <th>Name</th>
    <th>Price</th></tr>
    @foreach (var item in Model)
{
    <tr>
        <td>@item.ItemCode</td>
        <td>@Html.ActionLink(@item.ItemName, "Detail", "Restaurant", new { id = @item.ItemCode }, null)</td>
        <td>@item.Price</td>
    </tr>
}
</table>    


